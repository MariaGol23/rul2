<Page x:Class="rul2.Pages.PageAuth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:rul2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAuth">

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Label Content="Login" FontSize="16" HorizontalAlignment="Center"/>
            <TextBox x:Name="TbLogin" Width="200" Height="40" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Label Content="Pass" FontSize="16" HorizontalAlignment="Center"/>
            <TextBox x:Name="TbPass" Width="200" Height="40" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button Width="200" Height="40" Margin="20" Content="Войти" FontSize="16" Click="Button_Click"/>
        </StackPanel>
        
        
    </Grid>
</Page>
